<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/toolbar_id"
        android:background="#EFCFF8"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        android:paddingBottom="6sp"
        app:title="Appoint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3E2EF"
        android:layout_below="@id/toolbar_id">

        <LinearLayout
            android:background="#140435"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:rowCount="3"
                android:layout_gravity="center_horizontal"
                android:columnCount="1"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_row="0"
                    app:cardCornerRadius="15dp"
                    android:layout_column="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#B8CFE3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20sp"
                                android:layout_marginBottom="20sp"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Hair Cut"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <RadioGroup
                                android:id="@+id/WoringRadioGrp2_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/styled_radio_id1"
                                    android:layout_marginRight="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Styled"/>
                                <RadioButton
                                    android:id="@+id/random_radio_id1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Random"/>
                            </RadioGroup>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/time_picker_button_id1"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:text="Set Time"
                                    android:backgroundTint="@color/black"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>

                                <Button
                                    android:id="@+id/date_picker_button_id1"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:text="Set Date"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: 10$"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="23sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="5sp"/>

                            <TextView
                                android:id="@+id/confirm_id1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirm"
                                android:layout_gravity="center"
                                android:textColor="#980B0B"
                                android:textStyle="bold"
                                android:textSize="23sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginLeft="5sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_row="1"
                    app:cardCornerRadius="15dp"
                    android:layout_column="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#B8CFE3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:layout_marginBottom="20sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Beard Cut"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <RadioGroup
                                android:id="@+id/WoringRadioGrp1_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/styled_radio_id"
                                    android:layout_marginRight="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Styled"/>
                                <RadioButton
                                    android:id="@+id/random_radio_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Random"/>
                            </RadioGroup>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/time_picker_button_id"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:text="Set Time"
                                    android:backgroundTint="@color/black"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>

                                <Button
                                    android:id="@+id/date_picker_button_id"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:text="Set Date"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: 8$"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="23sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="5sp"/>

                            <TextView
                                android:id="@+id/confirm_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirm"
                                android:textColor="#980B0B"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textSize="23sp"
                                android:layout_marginTop="20sp"
                                android:layout_marginLeft="5sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_row="2"
                    app:cardCornerRadius="15dp"
                    android:layout_column="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#B8CFE3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20sp"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Parlour"
                                android:layout_marginBottom="20sp"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <RadioGroup
                                android:id="@+id/WoringRadioGrp3_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/styled_radio_id2"
                                    android:layout_marginRight="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Styled"/>
                                <RadioButton
                                    android:id="@+id/random_radio_id2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Random"/>
                            </RadioGroup>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/time_picker_button_id2"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:text="Set Time"
                                    android:backgroundTint="@color/black"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>

                                <Button
                                    android:id="@+id/date_picker_button_id2"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:text="Set Date"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: 15$"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="23sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="5sp"/>

                            <TextView
                                android:id="@+id/confirm_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirm"
                                android:layout_gravity="center"
                                android:textColor="#980B0B"
                                android:textStyle="bold"
                                android:textSize="23sp"
                                android:layout_marginTop="20sp"
                                android:layout_marginLeft="5sp"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>








